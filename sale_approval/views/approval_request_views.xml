<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sale_approval_request_list" model="ir.ui.view">
            <field name="name">sale.approval.request.list</field>
            <field name="model">sale.approval.request</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="sale_order_id"/>
                    <field name="requested_by"/>
                    <field name="approved_by"/>
                    <field name="state"/>
                    <field name="total_amount"/>
                </list>
            </field>
        </record>

        <record id="view_sale_approval_request_form" model="ir.ui.view">
            <field name="name">sale.approval.request.form</field>
            <field name="model">sale.approval.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>

                        <button name="action_submit"
                                string="Yuborish"
                                type="object"
                                class="oe_highlight"
                                invisible="state != 'draft'"/>

                        <button name="action_approve"
                                string="Tasdiqlash"
                                type="object"
                                class="btn-success"
                                invisible="state != 'submitted'"/>

                        <button name="action_reject"
                                string="Rad Etish"
                                type="object"
                                class="btn-danger"
                                invisible="state != 'submitted'"/>

                        <button name="action_draft"
                                string="Taslagi Holatiga"
                                type="object"
                                invisible="state not in ['rejected','submitted']"/>

                        <field name="state"
                               widget="statusbar"
                               nolabel="1"
                               statusbar_visible="draft,submitted,approved,rejected"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box"/>

                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="requested_by" readonly="1"/>
                            </group>
                            <group>
                                <field name="approved_by" readonly="1"/>
                                <field name="approval_date" readonly="1"/>
                            </group>
                        </group>

                        <group>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="total_amount" readonly="1" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>

                        <group invisible="state != 'rejected'">
                            <field name="rejection_reason"
                                   readonly="1"
                                   placeholder="Rad etish sababi..."/>
                        </group>

                        <group invisible="state in ['approved','rejected']">
                            <field name="rejection_reason"
                                   placeholder="Rad etish sababini kiriting..."/>
                        </group>

                        <notebook>
                            <page string="Habarlar">
                                <field name="message_ids" nolabel="1"/>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_sale_approval_request_kanban" model="ir.ui.view">
            <field name="name">sale.approval.request.kanban</field>
            <field name="model">sale.approval.request</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="name"/>
                    <field name="sale_order_id"/>
                    <field name="total_amount"/>
                    <field name="requested_by"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="sale_order_id"/>
                                </div>
                                <div>
                                    <field name="total_amount"/>
                                </div>
                                <div>
                                    <field name="requested_by"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_sale_order_form_approval" model="ir.ui.view">
            <field name="name">sale.order.form.approval</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_draft']" position="before">

                    <button name="action_create_approval_request"
                            string="Tasdiqlash So'rovi"
                            type="object"
                            class="oe_highlight"
                            invisible="not requires_approval or approval_request_id"/>

                    <button name="action_view_approval_request"
                            string="Tasdiqlash Ko'rish"
                            type="object"
                            class="oe_highlight"
                            invisible="not approval_request_id"/>
                </xpath>

                <xpath expr="//div[@name='button_box']" position="inside">

                    <button name="action_view_approval_request"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-check-circle"
                            invisible="not approval_request_id">
                        <field name="approval_status"
                               widget="statinfo"
                               string="Tasdiqlash"/>
                    </button>

                    <button name="action_view_approval_request"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-exclamation-triangle"
                            invisible="not requires_approval or approval_request_id">
                        <field string="Tasdiqlash Kerak"
                               name="requires_approval"
                               widget="statinfo"/>
                    </button>

                </xpath>
            </field>
        </record>

        <record id="action_sale_approval_requests" model="ir.actions.act_window">
            <field name="name">Approval Requests</field>
            <field name="res_model">sale.approval.request</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>